#include <LiquidCrystal.h>

LiquidCrystal lcd(12, 11, 5, 4, 3, 2); // Initialisation de l'écran LCD

int choix = 0; // Initialisation de la variable choix

void afficher_menu() {
  lcd.clear(); // Effacer l'écran LCD
  lcd.setCursor(0,0); // Positionner le curseur en haut à gauche de l'écran
  lcd.print("Menu principal"); // Afficher le titre du menu
  lcd.setCursor(0,1); // Positionner le curseur sur la deuxième ligne
  lcd.print("1. Option 1"); // Afficher la première option
  lcd.setCursor(0,2); // Positionner le curseur sur la troisième ligne
  lcd.print("2. Option 2"); // Afficher la deuxième option
  lcd.setCursor(0,3); // Positionner le curseur sur la quatrième ligne
  lcd.print("3. Option 3"); // Afficher la troisième option
}

void setup() {
  lcd.begin(16, 4); // Initialisation de l'écran LCD
  afficher_menu(); // Afficher le menu principal
}

void loop() {
  while(choix == 0) { // Tant que l'utilisateur n'a pas choisi d'option
    // Attendre l'appui sur un des boutons (à définir)
    if (bouton_1_appuye) {
      choix = 1; // Enregistrer le choix de l'utilisateur
    }
    if (bouton_2_appuye) {
      choix = 2; // Enregistrer le choix de l'utilisateur
    }
    if (bouton_3_appuye) {
      choix = 3; // Enregistrer le choix de l'utilisateur
    }
  }
  
  // Traiter le choix de l'utilisateur
  switch(choix) {
    case 1:
      lcd.clear(); // Effacer l'écran LCD
      lcd.setCursor(0,0); // Positionner le curseur en haut à gauche de l'écran
      lcd.print("Option 1"); // Afficher le titre de l'option 1
      // Traiter l'option 1
      break;
    case 2:
      lcd.clear(); // Effacer l'écran LCD
      lcd.setCursor(0,0); // Positionner le curseur en haut à gauche de l'écran
      lcd.print("Option 2"); // Afficher le titre de l'option 2
      // Traiter l'option 2
      break;
    case 3:
      lcd.clear(); // Effacer l'écran LCD
      lcd.setCursor(0,0); // Positionner le curseur en haut à gauche de l'écran
      lcd.print("Option 3"); // Afficher le titre de l'option 3
      // Traiter l'option 3
      break;
  }
  
  choix = 0; // Réinitialiser la variable choix pour permettre une nouvelle sélection
  delay(1000); // Attendre une seconde avant de revenir au menu principal
  afficher_menu(); // Afficher le menu principal
}
