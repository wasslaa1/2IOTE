#include <LiquidCrystal.h>
#include <Wire.h>

// Initialisation de l'écran LCD
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup() {
  // Définition du nombre de colonnes et de lignes de l'écran LCD
  lcd.begin(16, 2);
  // Initialise la communication I²C sur l'adresse 8
  Wire.begin(8);
  // Définit la fonction à exécuter lorsqu'un message est reçu
  Wire.onReceive(receiveEvent);
}

void loop() {
  // Boucle infinie
}

// Fonction appelée lorsqu'un message est reçu
void receiveEvent(int byteCount) {
  String message = "";
  while (Wire.available()) {
    message += (char)Wire.read();
  }
  lcd.clear(); // Efface l'écran LCD
  lcd.print(message); // Affiche le message sur l'écran LCD
}
