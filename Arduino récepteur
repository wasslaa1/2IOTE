#include <LiquidCrystal.h>
#include <Wire.h>

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup() {
  lcd.begin(16, 2);
  Wire.begin(8);
  Wire.onReceive(receiveEvent);
}

void loop() {
  // Boucle infinie
}

void receiveEvent(int byteCount) {
  String message = "";
  while (Wire.available()) {
    message += (char)Wire.read();
  }
  lcd.clear(); // Efface l'Ã©cran LCD
  lcd.print(message); 
}
